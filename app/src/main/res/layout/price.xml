<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    tools:context=".user.Categories.Price">
    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="200dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/imageprice"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/nameprice"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="24sp"
        android:background="@drawable/text"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/priceprice"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="24sp"
        android:background="@drawable/text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/text"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pricepro"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="pro"
            android:textSize="24sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/prfema"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24sp"
            android:gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/for_logo"
        android:textSize="25sp"
        android:text="@string/price1"/>
</LinearLayout>